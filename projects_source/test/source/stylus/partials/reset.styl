html *
  max-height 999999px //android font-size fix
  -webkit-font-smoothing antialiased
  margin 0
  padding 0
  border none
  vertical-align top
  box-sizing border-box
  outline none

section
  position relative

html
body
  width 100%
  height 100%
  min-width 320px

body
  min-height 100%
  height 100%
  position relative
  -webkit-text-size-adjust 100% // ios font-size fix
  background #fff
  min-width 320px

form,
p,
ul, ol,
dl, dt, dd,
h1, h2, h3, h4, h5, h6
  font-weight normal 
  list-style none

// .section
.text-center
  text-align center

.text-right
  text-align right

.width-wrap
  display block
  margin 0 auto
  max-width 788px
  padding 0 10px

// отступы между горизонтальными li
ol, ul, .grid
  list-style none 
  font-size:0 
  line-height:0 
  letter-spacing:-1px

li, .grid-item
  line-height:normal 
  letter-spacing:normal 
  display:inline-block 
  vertical-align top 
  zoom:1

.hidden-block
  display none !important

.justifyed
  display flex
  justify-content space-between
  flex-flow wrap
  align-content flex-start
  align-items flex-start