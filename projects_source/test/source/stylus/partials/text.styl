a, p, span, li, input, time, blockquote, textarea, div
  font-family $fRoboto
  font-weight 300
  font-size 16px
  line-height 24px
  text-decoration none
  color $cBlack

h1
  font-family $fRoboto
  font-weight 100
  display block
  text-align center
  color $cBlack
  font-size 70px
  line-height normal

  @media w_480
    font-size 50px

h2
  font-family $fRoboto
  font-weight 300
  display block
  text-align center
  color $cBlack
  font-size 30px
  line-height normal

  @media w_480
    font-size 26px