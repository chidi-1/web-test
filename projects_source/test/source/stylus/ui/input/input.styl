.inp
  box-sizing border-box
  box-shadow none
  outline none
  width 100%
  height 60px
  display block
  padding-top 15px
  font-size 20px
  color $cBlack
  border 1px solid $cGray_l
  border-radius 3px
  -webkit-appearance none
  text-align center
  font-weight 400
  transition all 0.2s ease-in-out

  @media w_768
    height 40px

  &:focus
    border 1px solid $cBlue

  &:focus,
  &.has-text
    & + .label__title
      top 25%
      font-size 14px

      @media w_768
        font-size 12px
        top 20%

input.inp
  &::placeholder
    opacity 0

textarea.inp
  height 180px
  padding-left 10px
  padding-top 10px
  text-align left
  resize none

  &::placeholder
    opacity 1
    font-size 24px
    font-weight 400
    color $cGray_m
    transition all 0.2s

    @media w_768
      font-size 20px
